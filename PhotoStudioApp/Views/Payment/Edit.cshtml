        <div class="row">
            @*column1*@
            <div class="col-md-7">
                <div class="row">

                    @Html.HiddenFor(m => m.paymentId, new { @class = "form-control" })
                    @Html.HiddenFor(m => m.studioId, new { @class = "form-control" })
                    @Html.HiddenFor(m => m.orderId, new { @class = "form-control", id = "txtOrderId" })
                    @*<div class="col-md-4">
