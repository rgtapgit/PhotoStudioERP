@model IEnumerable<PhotoStudioApp.Models.OrderViewModel>

@{
    ViewBag.Title = "List";
    Layout = null;
}

<script src="~/Scripts/jquery-3.6.0.min.js"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"
        integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
        crossorigin="anonymous">
</script>

<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"
        integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy"
        crossorigin="anonymous">

</script>

<link rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
      integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO"
      crossorigin="anonymous">

 <!-- jQuery first, then Popper.js, then Bootstrap JS -->

<div class="row">
    
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="container pb-3 pt-2">
                    <div class="card" style="width: 18rem;">
                        <div class="card-header" style="background-color:#46a4e2 ;color:white">
                            <strong>Order No: @Html.DisplayFor(modelItem => item.OrderNo) </strong><br />
                            <strong>Customer Name: @Html.DisplayFor(modelItem => item.customerName)</strong>
                        </div>
                        <ul class="list-group list-group-flush" style="color:black">
                            <li class="list-group-item"> Date : @Html.DisplayFor(modelItem => item.orderDate)</li>
                            <li class="list-group-item">Details : @Html.DisplayFor(modelItem => item.OrderDetails)</li>
                            <li class="list-group-item">Cost : @Html.DisplayFor(modelItem => item.totalCost)</li>
                            <li class="list-group-item">Contact No : @Html.DisplayFor(modelItem => item.Contact)</li>
                        </ul>
                        <div class="card-footer">
                            <button class="btn btn-info float-left" data-toggle="modal" data-target="#myModal" onclick="editList(@item.orderId)">Edit <i class="fa fa-edit"></i></button>
                            <button class="btn btn-danger float-right" onclick="deleteOrder(@item.orderId)">Delete <i class="fa fa-trash"></i></button>
                        </div>
                    </div>
                </div>
            </div>
        }
            
</div>


