            <div class="col-md-4">
                <label>Mobile No <i class="fa fa-phone"></i> :</label>
                @Html.DropDownList("customerId", (IEnumerable<SelectListItem>)ViewBag.MobileNo, "Select Mobile No", new { id = "dpdlMob", @class = "form-control" })
